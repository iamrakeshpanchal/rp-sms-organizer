<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Delete Settings"
            android:textColor="@color/text_primary_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete messages older than:"
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radio_never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never delete"
                android:textColor="@color/text_primary_dark" />

            <RadioButton
                android:id="@+id/radio_1_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 day"
                android:textColor="@color/text_primary_dark" />

            <RadioButton
                android:id="@+id/radio_7_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7 days"
                android:textColor="@color/text_primary_dark" />

            <RadioButton
                android:id="@+id/radio_30_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30 days"
                android:textColor="@color/text_primary_dark" />

        </RadioGroup>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_otp_auto_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto delete OTP after 24 hours"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="16dp"
            android:checked="true" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_promo_auto_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto delete promotional messages after 24 hours"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note: Auto delete only applies to messages in the relevant folders."
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>
